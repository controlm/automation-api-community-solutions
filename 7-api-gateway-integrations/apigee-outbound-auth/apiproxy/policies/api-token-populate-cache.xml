<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<PopulateCache name="api-token-populate-cache">
    <CacheResource>ctmtoken</CacheResource>
    <Source>control-m.apiAccessToken</Source>
    <Scope>Exclusive</Scope>
    <CacheKey>
        <KeyFragment>apiAccessToken</KeyFragment>
    </CacheKey>
    <ExpirySettings>
        <!-- Access tokens expire after 10 minutes -->
        <TimeoutInSec>600</TimeoutInSec>
    </ExpirySettings>
</PopulateCache>